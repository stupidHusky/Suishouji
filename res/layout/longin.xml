<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/login_textViewId"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_alignBottom="@+id/imageView1"
            android:background="#F6B159"
            android:text="          登录"
            android:textSize="26sp"
            tools:ignore="UnknownIdInLayout,UnknownId" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <EditText
        android:id="@+id/log_et1_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入您的邮箱帐号" />

    <EditText
        android:id="@+id/log_et2_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入您的密码"
        android:password="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/login_log_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:background="#410942"
            android:text="登录"
            android:textColor="#F2F2F4"
            android:textSize="22sp" />

        <Button
            android:id="@+id/login_re_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:background="#F6B159"
            android:text="注册"
            android:textColor="#F2F2F4"
            android:textSize="22sp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="登录后，可以将本地账本升级为同步账本哦！"
        android:textSize="15sp" />

</LinearLayout>