<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/login_textViewId"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_alignBottom="@+id/imageView1"
            android:background="#F6B159"
            android:text="          注册"
            android:textSize="26sp"
            tools:ignore="UnknownId" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <EditText
        android:id="@+id/re_et1_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="用户名（常用邮箱）" />

    <EditText
        android:id="@+id/re_et2_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入您的密码"
        android:password="true" />

    <EditText
        android:id="@+id/re_et3_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="确认您的密码"
        android:password="true" />

    <Button
        android:id="@+id/re_re_id"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#410942"
        android:text="免费注册"
        android:textColor="#F2F2F4"
        android:textSize="22sp" />

</LinearLayout>